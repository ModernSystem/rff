<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_picture_establishment"
        android:layout_width="@dimen/profile_picture_size"
        android:layout_height="@dimen/profile_picture_size"
        android:layout_margin="@dimen/profile_picture_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/establishment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:layout_constraintTop_toTopOf="@id/profile_picture_establishment"
        app:layout_constraintLeft_toRightOf="@id/profile_picture_establishment"
        android:layout_marginStart="@dimen/profile_picture_margin"/>

    <TextView
        android:id="@+id/establishment_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:layout_constraintTop_toBottomOf="@id/establishment_name"
        app:layout_constraintLeft_toRightOf="@id/profile_picture_establishment"
        android:layout_marginStart="@dimen/profile_picture_margin"
        android:layout_marginTop="@dimen/profile_picture_margin"/>
    <TextView
        android:id="@+id/establishment_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:layout_constraintBottom_toBottomOf="@id/profile_picture_establishment"
        app:layout_constraintLeft_toRightOf="@id/profile_picture_establishment"
        android:layout_marginStart="@dimen/profile_picture_margin" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="@color/primaryTextColor"
        android:layout_marginTop="@dimen/profile_picture_margin"
        android:layout_marginBottom="@dimen/profile_picture_margin"
        app:layout_constraintTop_toBottomOf="@id/profile_picture_establishment"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comingEventRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/separator"/>



</androidx.constraintlayout.widget.ConstraintLayout>